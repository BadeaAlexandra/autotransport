<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F3F3"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/logoImageView"
        app:srcCompat="@drawable/ticket"
        android:layout_width="186dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/todo"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:ems="10"
        android:hint="Introdu numele tau"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:ems="10"
        android:hint="Introdu prenumele tau"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:ems="10"
        android:hint="Introdu numele utilizatorului"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:ems="10"
        android:hint="Introdu parola"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/birthdateTextView"
        style="@android:style/Widget.EditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:ems="10"
        android:hint="Selecteaza data nasterii"
        android:inputType="none" />

    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:ems="10"
        android:hint="Introdu adresa de e-mail"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:background="@drawable/button_background"
        android:layout_centerHorizontal="true"
        android:text="INREGISTREAZA-TE" />

</RelativeLayout>